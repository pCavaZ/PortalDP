{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning",
            "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
        }
    },
    "ConnectionStrings": {
        "DefaultConnection": "Host=localhost;Database=PortalDP_Dev;Username=admin_user_pablo;Password=20admin14"
    },
    "JwtSettings": {
        "SecretKey": "your-super-secret-key-that-should-be-at-least-32-characters-long",
        "Issuer": "AcademiaCosturaAPI",
        "Audience": "AcademiaCosturaApp",
        "ExpirationHours": 24
    },
    "AllowedOrigins": [
        "http://localhost:3000",
        "http://localhost:5173",
        "https://your-react-app-domain.com"
    ],
    "Serilog": {
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
                }
            },
            {
                "Name": "File",
                "Args": {
                    "path": "logs/academia-costura-.txt",
                    "rollingInterval": "Day",
                    "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
                }
            }
        ]
    },
    "AllowedHosts": "*"
}